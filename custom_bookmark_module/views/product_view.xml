<odoo>
    <record id="view_product_template_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">product.template.form.inherit.custom.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Book Info">
                    <group>
                        <field name="authors_2"/>
                        <field name="main_distributor"/>
                        <field name="dept"/>
                        <field name="date_of_publish"/>
                        <field name="lang_of_origin"/>
                        <field name="pos_label"/>
                        <field name="price_category"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
